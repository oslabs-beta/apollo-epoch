{
  "name": "Apollo Epoch",
  "version": "0.1",
  "manifest_version": 2,
  "description": "The GraphQL time travel debugging tool for Apollo Client in the Chrome developer console.",
  "devtools_page": "devtools.html",
  "browser_action": {
    "default_popup": "./popup.html",
    "default_title": "Apollo Epoch"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": ["fiberInjection.js"],
  "permissions": ["storage", "activeTab", "<all_urls>", "tabs", "webRequest"]
}
